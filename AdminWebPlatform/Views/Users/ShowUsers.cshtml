@{

    <h1>Список пользователей</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Имя</th>
                <th>Email</th>
                <th>Роль</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        @if (ViewBag.CanEdit == true)
                        {
                            <p>Edit</p>
                        }

                        @if (ViewBag.CanDelete == true && ViewBag.UserId != @user.Id)
                        {
                            <p>Delete</p>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
